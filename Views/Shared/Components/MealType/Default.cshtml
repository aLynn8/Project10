@model IEnumerable<RecipeClasses>
<!--Aubrey Farnbach (Wright) Sectino 2 Group 1-->
<!--This displays the Recipe select list users can filter with-->
<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-mealtypeid="">Home</a>
<br />

@foreach (var x in Model)
{
    <a class="btn btn-block @(x.RecipeClassDescription == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index" asp-controller="Home" asp-route-mealtypeid="@x.RecipeClassId"
       asp-route-mealtype="@x.RecipeClassDescription">@x.RecipeClassDescription</a>
    <br />
}